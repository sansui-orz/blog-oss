<%- include('header.ejs', { config: config }); %>
  <link rel="stylesheet" href="https://cdn.staticfile.org/highlight.js/10.7.1/styles/default.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.css">
  <title><%- title %> - <%- config.name %></title>
  <style>
    .hide-menu .content {
      width: 100%;
    }
    .hide-menu aside {
      display: none;
    }
    aside {
      width: 200px;
      background: #f3f3f3;
      border-radius: 10px;
      flex-shrink: 0;
      min-height: 100px;
      position: sticky;
      margin-top: 50px;
      top: 50px;
      float: right;
      padding: 10px 0;
      max-height: 70vh;
      overflow-y: auto;
    }
    pre {
      width: 100%;
      overflow: auto;
    }
    .slogan {
      text-align: center;
    }
    @media screen and (max-width: 900px) {
      aside {
        display: none;
      }
    }
    #gitalk-container {
      width: 640px;
      max-width: 100vw;
      padding: 20px;
      box-sizing: border-box;
      margin: 0 auto;
    }
    .menu-1,
    .menu-2,
    .menu-3 {
      padding: 2px 20px;
      color: black;
      text-overflow: ellipsis;
      overflow: hidden;
      white-space: nowrap;
      font-size: 14px;
    }
    .menu-2 {
      padding-left: 30px;
    }
    .menu-3 {
      padding-left: 40px;
    }
    .menu-1 a,
    .menu-2 a,
    .menu-3 a {
      color: black;
      text-decoration: none;
    }
    .create-time {
      font-size: 12px;
      color: #ccc;
      text-align: right;
      padding: 4px;
    }
    .tags {
      text-align: center;
      padding: 15px 0 0;
    }
    .footer {
      max-width: 1000px;
      margin: 0 auto;
      padding: 10px 0;
      border-top: 1px solid #eee;
    }
    .icp-code {
      color: #ccc;
    }
    code {
      background: gray;
      padding: 2px 3px;
      border-radius: 3px;
      margin: 0 2px;
      color: white;
    }
  </style>
</head>
<body>
  <header><a href="/"><%- config.name %></a></header>
  <div class="tags"><%- tags.join(' / '); %></div>
  <div class="body<%- menu.length === 0 ? ' hide-menu' : '' %>">
    <div class="content"><%- body %></div>
    <aside>
      <% menu.forEach(function(item) { %>
        <div class="menu-<%- item.level %>"><a href="#<%- item.id %>"><%- item.title %></a></div>
      <% }); %>
    </aside>
    <div class="create-time">发表于: <%- year %>-<%- month %>-<%- day %></div>
    <hr />
  </div>
  <div id="gitalk-container"></div>
  <script>
    function initGitalk() {
      var gitalk = new Gitalk({
        id: '<%- id %>',
        distractionFreeMode: false,
        ...JSON.parse('<%- JSON.stringify(config.github) %>')
      });
      gitalk.render('gitalk-container');
    }
  </script>
  <script async onload="hljs.highlightAll();" src="https://cdn.staticfile.org/highlight.js/10.7.1/highlight.min.js"></script>
  <script async onload="initGitalk();" src="https://cdn.jsdelivr.net/npm/gitalk@1/dist/gitalk.min.js"></script>
<%- include('footer.ejs', { config: config }); %>